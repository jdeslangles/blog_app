<form action='/update/<%=@post['id']%>' method='post'>
  <dl>
    <dt><label for='title'>Title:</label></dt>
    <dd><input id='title' type='text' name='title' value='<%=@post['title']%>' autofocus></dd>
  </dl>
  <dl>
    <dt><label for='author'>Author:</label></dt>
    <dd><input id='author' type='text' value='<%=@post['author']%>'name='author'></dd>
  </dl>
  <dl>
    <dt><label for='content'>Content:</label></dt>
    <dd><textarea id='content' type='text' name='content' ><%=@post['content']%></textarea></dd>
  </dl>
  <button>Save changes</button>
</form>