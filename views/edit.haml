.span5 offset1
  .post
    %form{action:"/update/#{@post['id']}", method:"post"}
      %dl
        %dt Title:
        %dd input{type:"text", name:"title", value:"#{@post['title']}"}
      %dl
        %dt Author:
        %dd input{type:"text", name:"author", value:"#{@post['author']}"}
      %dl
        %dt Content:
        %dd input{type:"text", name:"content", value:"#{@post['content']}"}
      %button .btn Save changes